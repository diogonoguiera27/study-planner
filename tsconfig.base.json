{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Node types */
    "types": ["node"]
  }
}
